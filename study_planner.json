  "file_structure": {
    "config": [
      "database.php"
    ],
    "includes": [
      "functions.php",
      "auth.php",
      "header.php",
      "footer.php",
      "navbar.php"
    ],
    "api": [
      "update_progress.php",
      "get_progress.php"
    ],
    "assets": {
      "css": [
        "style.css"
      ],
      "js": [
        "script.js",
        "chart-config.js"
      ]
    },
    "root_files": [
      "index.php",
