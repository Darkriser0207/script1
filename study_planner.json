  },
  "features": {
    "authentication": {
      "login": true,
      "register": true,
      "logout": true,
      "password_hashing": true
    },
    "user_dashboard": {
      "view_daily_tasks": true,
      "mark_tasks_complete": true,
      "progress_tracking": true,
      "progress_visualization": true
    },
    "admin_dashboard": {
      "view_all_users": true,
      "view_user_details": true,
      "analytics": true,
      "charts": true
    }
  },
  "ui_elements": {
    "progress_bar": {
      "type": "bootstrap",
      "animated": true,
      "color_coding": true
    },
    "cards": {
      "day_cards": {
        "color_coded": true,
        "responsive": true
      }
    },
    "charts": {
      "progress_chart": {
        "type": "doughnut",
        "color_coded": true
      },
      "weekly_chart": {
        "type": "line",
        "responsive": true
      },
      "subject_chart": {
        "type": "bar",
        "color_coded": true
      }
    }
  },
  "frontend_dependencies": {
    "bootstrap": "5.3.2",
    "font_awesome": "6.4.2",
    "chart_js": "4.3.0"
  }
