{
  "project": {
    "name": "PHP Study Planner",
    "description": "A PHP-based day-wise study planner with progress tracking, user authentication, and admin analytics dashboard",
    "version": "1.0.0"
  },
  "database": {
    "tables": [
      {
        "name": "users",
        "columns": [
          {"name": "id", "type": "SERIAL", "constraints": "PRIMARY KEY"},
          {"name": "username", "type": "VARCHAR(50)", "constraints": "UNIQUE NOT NULL"},
          {"name": "password", "type": "VARCHAR(255)", "constraints": "NOT NULL"},
          {"name": "name", "type": "VARCHAR(100)", "constraints": "NOT NULL"},
          {"name": "email", "type": "VARCHAR(100)", "constraints": "UNIQUE NOT NULL"},
          {"name": "role", "type": "VARCHAR(20)", "constraints": "DEFAULT 'student'"},
          {"name": "created_at", "type": "TIMESTAMP", "constraints": "DEFAULT CURRENT_TIMESTAMP"}
        ]
      },
      {
        "name": "study_plan",
        "columns": [
          {"name": "id", "type": "SERIAL", "constraints": "PRIMARY KEY"},
          {"name": "day_number", "type": "INT", "constraints": "NOT NULL"},
          {"name": "subject", "type": "VARCHAR(100)", "constraints": "NOT NULL"},
          {"name": "module", "type": "VARCHAR(100)", "constraints": "NOT NULL"},
          {"name": "description", "type": "TEXT", "constraints": ""},
          {"name": "color", "type": "VARCHAR(20)", "constraints": "DEFAULT '#3498db'"},
          {"name": "created_at", "type": "TIMESTAMP", "constraints": "DEFAULT CURRENT_TIMESTAMP"}
        ]
      },
      {
        "name": "progress",
        "columns": [
          {"name": "id", "type": "SERIAL", "constraints": "PRIMARY KEY"},
          {"name": "user_id", "type": "INT", "constraints": "NOT NULL REFERENCES users(id)"},
          {"name": "study_plan_id", "type": "INT", "constraints": "NOT NULL REFERENCES study_plan(id)"},
          {"name": "completed", "type": "BOOLEAN", "constraints": "DEFAULT FALSE"},
          {"name": "completion_date", "type": "TIMESTAMP", "constraints": ""},
          {"name": "notes", "type": "TEXT", "constraints": ""},
          {"name": "created_at", "type": "TIMESTAMP", "constraints": "DEFAULT CURRENT_TIMESTAMP"}
        ]
      }
    ]
  },
